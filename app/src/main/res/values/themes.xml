<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BookShor" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/sky_500</item>
        <item name="colorPrimaryVariant">@color/sky_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MySplashScreen" parent="Theme.BookShor">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="MyLoginScreen" parent="Theme.BookShor">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="CommonTextStyle">
        <item name="textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="ButtonStyle" parent="CommonTextStyle">
        <item name="fontFamily">@font/sen_regular</item>
    </style>

    <style name="TextHeaderStyle" parent="CommonTextStyle">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/_22ssp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextSubTitleStyle" parent="CommonTextStyle">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/_20ssp</item>
    </style>

    <style name="DetailTextStyle" parent="CommonTextStyle">
        <item name="fontFamily">@font/sen_regular</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>